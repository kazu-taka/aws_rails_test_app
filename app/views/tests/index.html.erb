<div class="mx-auto">
  <div class="mb-5">
    <h1 class="text-center">テスト一覧</h1>
  </div>
    
  <div>
    <p  class="text-right"><%= link_to '新規作成', new_test_path %></p>
  </div>
  
  <div class="table table-striped table-hover table-responsive">
    <table>
      <thead>
        <tr>
          <th>Test date</th>
          <th>Title</th>
          <th>Product</th>
          <th>Description</th>
          <th>Result</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @tests.each do |test| %>
          <tr>
            <td><%= test.test_date %></td>
            <td><%= test.title .truncate(20) %></td>
            <td><%= test.product .truncate(20)%></td>
            <td><%= test.description .truncate(30) %></td>
            <td><%= test.result %></td>
            <td><%= test.name %></td>
            <td class="px-2"><%= link_to '詳細', test %></td>
            <td class="px-2"><%= link_to '編集', edit_test_path(test) %></td>
            <td class="px-2"><%= link_to '削除', test, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>